{
  "family": "bx-backend-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::855159934171:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::855159934171:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "bx-backend-container",
      "image": "855159934171.dkr.ecr.sa-east-1.amazonaws.com/bx-backend:debug",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 8080,
          "protocol": "tcp"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/bx-backend",
          "awslogs-region": "sa-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
